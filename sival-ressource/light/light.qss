/* ===================================================================
 * Hauptfenster
 * ================================================================ */
QWidget {
    background-color: #FFFFFF;
    border-radius: 5px;
    border: none;
    color: #6B6B6E;
}

#mainWindow {
    border: 1px solid #E5E5E8;
}

QWidget.CardList {
    background-color: #E5E5E8;
    border-radius: 5px;
}

/* Die Pfeile (oben/unten) und den Hintergrund (Page-Bereich) komplett ausblenden */
QScrollBar::add-line, QScrollBar::sub-line,
QScrollBar::add-page, QScrollBar::sub-page {
    background: #E5E5E8;
    border: none;
    width: 0px;
    height: 0px;
}

/* Der Scrollbar-Hintergrund (die 'Rille') */
QScrollBar:vertical {
    border: none;
    border-radius: 3px;
    background: #B5B5B8;
    width: 6px;
    margin: 0;
}
QScrollBar:horizontal {
    border: none;
    background: #B5B5B8;
    height: 6px;
    margin: 0;
    border-radius: 3px;
}

/* Der 'Handle' (der Knopf, den man zieht) */
QScrollBar::handle:vertical {
    background: transparent;
    min-height: 20px;
    border-radius: 3px;
}
QScrollBar::handle:horizontal {
    background: transparent;
    min-width: 20px;
    border-radius: 3px;
}

/* *** DIE MAGIE: Sichtbar machen bei Hover *** */
QScrollArea:hover QScrollBar::handle:vertical {
    background: #A5A5A8;
}
QScrollArea:hover QScrollBar::handle:horizontal {
    background: #A5A5A8;
}

/* Heller/dunkler machen, wenn man den Handle selbst greift */
QScrollBar::handle:vertical:hover, QScrollBar::handle:vertical:pressed {
    background: #A5A5A8;
}
QScrollBar::handle:horizontal:hover, QScrollBar::handle:horizontal:pressed {
    background: #A5A5A8;
}


/* ==================================================================
 * Check Box
 * =============================================================== */
QCheckBox {
    spacing: 8px;
    color: #6B6B6E;
    font-size: 10pt;
}

QCheckBox:disabled {
    color: #888888;
}

QCheckBox::indicator {
    width: 12px;
    height: 12px;
    border: 1px solid #6B6B6E;
    border-radius: 4px;
    background-color: #FFFFFF;
}

/* Hover-Effekt */
QCheckBox::indicator:unchecked:hover {
    background-color: #F0F0F3;
}

QCheckBox::indicator:checked {
    image: url(:/sival/light/check.svg);
}

QCheckBox::indicator:checked:hover {
    background-color: #F0F0F3;
}

/* ===================================================================
 * Combo Box
 * ================================================================ */

QComboBox {
    background-color: #FFFFFF;
    color: #6B6B6E;
    border: 1px solid #C5C5C8;
    border-radius: 5px;
    padding: 5px 10px 5px 10px;
    min-width: 6em;
}

QComboBox:hover {
    background-color: #F0F0F3;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border-left-width: 0px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

QComboBox::down-arrow {
    image: url(:/sival/light/arrow-down.svg);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    border: 1px solid #C5C5C8;
    border-radius: 0px;
    background-color: #FFFFFF;
    color: #6B6B6E;
    selection-background-color: #0078D7;
    selection-color: #6B6B6E;
    outline: 0px;
}

QComboBox QAbstractItemView::item {
    min-height: 24px;
    padding-left: 5px;
    color: #6B6B6E;
}

QComboBox QAbstractItemView::item:hover {
    background-color: #F0F0F3;
    color: #6B6B6E;
    border: none;
}

QComboBox QAbstractItemView QScrollBar:vertical {
    width: 8px;
    background: #0078D7;
}

