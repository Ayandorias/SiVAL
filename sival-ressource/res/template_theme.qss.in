/* ===================================================================
 * Hauptfenster
 * ================================================================ */
QWidget {
    background-color: @CONTENT_BG@;
    border-radius: 5px;
    border: none;
    color: @TEXT_PRIMARY@;
}

#mainWindow {
    border: 1px solid @WINDOW_BG@;
}

QWidget.CardList {
    background-color: @WINDOW_BG@;
    border-radius: 5px;
}

/* Die Pfeile (oben/unten) und den Hintergrund (Page-Bereich) komplett ausblenden */
QScrollBar::add-line, QScrollBar::sub-line,
QScrollBar::add-page, QScrollBar::sub-page {
    background: @WINDOW_BG@;
    border: none;
    width: 0px;
    height: 0px;
}

/* Der Scrollbar-Hintergrund (die 'Rille') */
QScrollBar:vertical {
    border: none;
    border-radius: 3px;
    background: @SCROLL_TRACK@;
    width: 6px;
    margin: 0;
}
QScrollBar:horizontal {
    border: none;
    background: @SCROLL_TRACK@;
    height: 6px;
    margin: 0;
    border-radius: 3px;
}

/* Der 'Handle' (der Knopf, den man zieht) */
QScrollBar::handle:vertical {
    background: transparent;
    min-height: 20px;
    border-radius: 3px;
}
QScrollBar::handle:horizontal {
    background: transparent;
    min-width: 20px;
    border-radius: 3px;
}

/* *** DIE MAGIE: Sichtbar machen bei Hover *** */
QScrollArea:hover QScrollBar::handle:vertical {
    background: @SCROLL_HANDLE@;
}
QScrollArea:hover QScrollBar::handle:horizontal {
    background: @SCROLL_HANDLE@;
}

/* Heller/dunkler machen, wenn man den Handle selbst greift */
QScrollBar::handle:vertical:hover, QScrollBar::handle:vertical:pressed {
    background: @SCROLL_HANDLE@;
}
QScrollBar::handle:horizontal:hover, QScrollBar::handle:horizontal:pressed {
    background: @SCROLL_HANDLE@;
}


/* ==================================================================
 * Check Box
 * =============================================================== */
QCheckBox {
    spacing: 8px;
    color: @TEXT_PRIMARY@;
    font-size: 10pt;
}

QCheckBox:disabled {
    color: @TEXT_DISABLED@;
}

QCheckBox::indicator {
    width: 12px;
    height: 12px;
    border: 1px solid @TEXT_PRIMARY@;
    border-radius: 4px;
    background-color: @CONTENT_BG@;
}

/* Hover-Effekt */
QCheckBox::indicator:unchecked:hover {
    background-color: @HOVER_BG_CONTENT@;
}

QCheckBox::indicator:checked {
    image: url(:/sival/@THEME_ID@/check.svg);
}

QCheckBox::indicator:checked:hover {
    background-color: @HOVER_BG_CONTENT@;
}

/* ===================================================================
 * Combo Box
 * ================================================================ */

QComboBox {
    background-color: @CONTENT_BG@;
    color: @TEXT_PRIMARY@;
    border: 1px solid @BORDER_COLOR@;
    border-radius: 5px;
    padding: 5px 10px 5px 10px;
    min-width: 6em;
}

QComboBox:hover {
    background-color: @HOVER_BG_CONTENT@;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 25px;
    border-left-width: 0px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
}

QComboBox::down-arrow {
    image: url(:/sival/@THEME_ID@/arrow-down.svg);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    border: 1px solid @BORDER_COLOR@;
    border-radius: 0px;
    background-color: @CONTENT_BG@;
    color: @TEXT_PRIMARY@;
    selection-background-color: @SELECTION_BG@;
    selection-color: @TEXT_PRIMARY@;
    outline: 0px;
}

QComboBox QAbstractItemView::item {
    min-height: 24px;
    padding-left: 5px;
    color: @TEXT_PRIMARY@;
}

QComboBox QAbstractItemView::item:hover {
    background-color: @HOVER_BG_CONTENT@;
    color: @TEXT_PRIMARY@;
    border: none;
}

QComboBox QAbstractItemView QScrollBar:vertical {
    width: 8px;
    background: @SELECTION_BG@;
}

